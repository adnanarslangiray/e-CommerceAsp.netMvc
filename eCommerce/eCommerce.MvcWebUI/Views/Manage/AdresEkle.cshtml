@model eCommerce.Entities.Concrete.Adres


<section class="form-section register-form">
    <div class="container">
        <h1 class="h2 heading-primary font-weight-normal mb-md mt-lg">Adres Ekle</h1>

        <div class="featured-box featured-box-primary featured-box-flat featured-box-text-left mt-md">
            <div class="box-content">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    
                    <h4 class="heading-primary text-uppercase mb-lg">Adres Ekle</h4>
                    <div class="row">
                        <div class="col-sm-4 col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.AdresAdi, new { @class = "font-weight-normal" })
                                <span class="required">*</span>
                                @Html.TextBoxFor(m => m.AdresAdi, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.AdresAdi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-4 col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ulke, new { @class = "font-weight-normal" })
                                <span class="required">*</span>
                                @Html.TextBoxFor(m => m.Ulke, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Ulke, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-4 col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Il, new { @class = "font-weight-normal" })
                                <span class="required">*</span>
                                @Html.TextBoxFor(m => m.Il, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Il, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-sm-4 col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ilce, new { @class = "font-weight-normal" })
                                <span class="required">*</span>
                                @Html.TextBoxFor(m => m.Ilce, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Ilce, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.AdresDetay, new { @class = "font-weight-normal" })
                                <span class="required">*</span>
                                @Html.TextAreaFor(m => m.AdresDetay, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AdresDetay, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                        <div class="row">
                            <div class="col-xs-12">
                                <p class="required mt-lg mb-none">* Zorunlu</p>

                                <div class="form-action clearfix mt-none">
                                    <a href="@Url.Action("Adres", "Manage")" class="pull-left"><i class="fa fa-angle-double-left"></i> Adresler</a>
                                   
                                    <input type="submit" class="btn btn-primary" value="Adres Ekle" />
                                </div>
                            </div>
                        </div>
                }

            </div>
        </div>
    </div>
</section>




