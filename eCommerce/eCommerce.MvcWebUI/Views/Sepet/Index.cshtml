@model eCommerce.Entities.Concrete.Sepet


<div class="cart">
    <div class="container">
        <h1 class="h2 heading-primary mt-lg clearfix">
            <span>Sepet</span>
        </h1>

        <div class="row">
            <div class="col-md-8 col-lg-9">
                <div class="cart-table-wrap">
                    <table class="cart-table">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th>Ürün</th>
                                <th>Fiyatı</th>
                                <th>Miktar</th>
                                <th>Toplam</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.SepetUrun)
                            {
                                <tr>
                                    <td class="product-action-td">
                                        <a href="@Url.Action("SepettenUrunCikar","Sepet",new { urunId=item.Id })" title="Remove product" class="btn-remove"><i class="fa fa-times"></i></a>
                                    </td>
                                    <td class="product-image-td">
                                        <a href="#" title="Product Name">
                                            <img src="@(item.Urun.UrunImages.Count != 0 ? item.Urun.UrunImages.FirstOrDefault().UrunImageUrl : "/Content/img/demos/shop/products/product1-2.jpg")" alt="Product Name">
                                        </a>
                                    </td>
                                    <td class="product-name-td">
                                        <h2 class="product-name"><a href="#" title="Product Name">
                                            @item.Urun.UrunAdi
                                             </a></h2>
                                    </td>
                                    <td>
                                    @(item.Urun.UrunFiyati) ₺
                                    </td>
                                    <td>
                                        @item.Miktar
                                    </td>
                                    <td>
                                        <span class="text-primary">
                                        @(item.Urun.UrunFiyati * item.Miktar ) ₺</span>
                                    </td>
                                </tr>
                            }

                            
                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="clearfix">
                                    <a href="@Url.Action("Index","Home")" class="btn btn-default hover-primary btn-continue">Alışverişe Devam Et</a>
                                    
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <aside class="col-md-4 col-lg-3 sidebar shop-sidebar">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a class="accordion-toggle" data-toggle="collapse" href="#panel-cart-total">
                                    Toplam
                                </a>
                            </h4>
                        </div>
                        <div id="panel-cart-total" class="accordion-body collapse in">
                            <div class="panel-body">
                                <table class="totals-table">
                                    <tbody>
                                        <tr>
                                            <td>Toplam</td>
                                            <td>@Model.Toplam  ₺
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="totals-table-action">
                                    <a href="@Url.Action("Create","Siparis")" class="btn btn-primary btn-block">Siparişi Onayla</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>
        </div>

    </div>
</div>